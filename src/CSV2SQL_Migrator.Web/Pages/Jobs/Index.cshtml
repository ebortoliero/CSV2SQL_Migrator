@page
@model CSV2SQL_Migrator.Web.Pages.Jobs.IndexModel
@{
    ViewData["Title"] = "Jobs de Migração";
}

<div class="row">
    <div class="col-12">
        <h2>Jobs de Migração</h2>
        <hr />

        @if (Model.Jobs.Count == 0)
        {
            <div class="alert alert-info">
                Nenhum job encontrado. <a asp-page="/Config/Index">Criar novo job</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Status</th>
                            <th>Pasta Raiz</th>
                            <th>Arquivos</th>
                            <th>Criado em</th>
                            <th>Iniciado em</th>
                            <th>Finalizado em</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var job in Model.Jobs)
                        {
                            <tr>
                                <td>@job.Id</td>
                                <td>
                                    @switch (job.Status)
                                    {
                                        case Domain.Models.JobStatus.Created:
                                            <span class="badge bg-secondary">Criado</span>
                                            break;
                                        case Domain.Models.JobStatus.Running:
                                            <span class="badge bg-primary">Em Execução</span>
                                            break;
                                        case Domain.Models.JobStatus.Completed:
                                            <span class="badge bg-success">Concluído</span>
                                            break;
                                        case Domain.Models.JobStatus.Failed:
                                            <span class="badge bg-danger">Falhou</span>
                                            break;
                                        case Domain.Models.JobStatus.Cancelled:
                                            <span class="badge bg-warning">Cancelado</span>
                                            break;
                                    }
                                </td>
                                <td>@job.RootFolder</td>
                                <td>@job.ProcessedFiles / @job.TotalFiles</td>
                                <td>@job.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                <td>@(job.StartedAt?.ToString("dd/MM/yyyy HH:mm:ss") ?? "-")</td>
                                <td>@(job.FinishedAt?.ToString("dd/MM/yyyy HH:mm:ss") ?? "-")</td>
                                <td>
                                    <a asp-page="/Monitoring/Index" asp-route-jobId="@job.Id" class="btn btn-sm btn-info">Ver Detalhes</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

        <div class="mt-3">
            <a asp-page="/Config/Index" class="btn btn-primary">Criar Novo Job</a>
        </div>
    </div>
</div>

